apiVersion: template.openshift.io/v1
kind: Template
labels:
  template: amq-interconnect-sasl-cm
metadata:
  annotations:
    description: Config Map containing QPid Router SASL configuration
    iconClass: icon-amq
    openshift.io/display-name: QDRouter SASL Config Map
  labels:
    app: {{ ar_osc_amqinterconnect_common_name }}
  name: {{ ar_osc_amqinterconnect_common_name }}-sasl-config-map
objects:
- apiVersion: v1
  kind: ConfigMap
  metadata:
    name: {{ ar_osc_amqinterconnect_common_name }}-sasl-config-map
    namespace: {{ ar_osc_amqinterconnect_namespace }}
    labels:
      app: {{ ar_osc_amqinterconnect_common_name }}
  data:
    qdrouterd.conf: |-
{% for line in lookup('file', ar_osc_amqinterconnect_config_dest + '/sasl-qdrouterd.conf').split('\n') %}
      {{ line }}
{% endfor %}
